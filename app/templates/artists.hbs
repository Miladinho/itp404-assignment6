<h1>ITP 404 - Ember 3</h1>
<p1>
  {{#link-to 'artists.new'}} Create New Artist{{/link-to}}
</p1>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      {{#each model.artists as |artist|}}
        <div>
          {{#link-to 'artists.artist' artist.id}}
            {{artist.name}}
          {{/link-to}}
        </div>
      {{/each}}
    </div>
    <div class="col-md-8">
      {{outlet}}
    </div>
  </div>
</div>
